<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ru.kpfu.itis.paramonov.heartstone.controller.BattlefieldController"
            prefHeight="720.0" prefWidth="1080.0">

    <VBox AnchorPane.rightAnchor="10">
        <VBox prefHeight="300" VBox.vgrow="ALWAYS"/>
        <Button VBox.vgrow="ALWAYS"
                text="End turn"
                prefHeight="50"
                prefWidth="100"
                fx:id="btnEndTurn"
        />
    </VBox>

    <HBox AnchorPane.bottomAnchor="10" fx:id="hBoxCards" spacing="60">
        <HBox prefWidth="100"/>
        <StackPane fx:id="hehe" HBox.hgrow="ALWAYS">
            <ImageView fx:id="ivCardFirst"
                       fitWidth="120"
                       fitHeight="160"
            />
        </StackPane>
        <ImageView fx:id="ivCardSecond"
                   fitWidth="120"
                   fitHeight="160"
                   HBox.hgrow="ALWAYS"
        />
        <ImageView fx:id="ivCardThird"
                   fitWidth="120"
                   fitHeight="160"
                   HBox.hgrow="ALWAYS"
        />
        <ImageView fx:id="ivCardForth"
                   fitWidth="120"
                   fitHeight="160"
                   HBox.hgrow="ALWAYS"
        />
    </HBox>

</AnchorPane>
