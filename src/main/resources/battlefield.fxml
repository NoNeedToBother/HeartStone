<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:id="root"
            fx:controller="ru.kpfu.itis.paramonov.heartstone.controller.BattlefieldController"
            prefHeight="720.0" prefWidth="1280.0">

    <ImageView fx:id="background"/>

    <VBox AnchorPane.rightAnchor="10" fx:id="vBoxBtnEndTurn">
        <VBox prefHeight="300" VBox.vgrow="ALWAYS"/>
    </VBox>

    <ImageView fx:id="handBg" AnchorPane.leftAnchor="10" AnchorPane.bottomAnchor="0"/>

    <HBox AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="60" fx:id="hBoxCards" spacing="60">
    </HBox>
</AnchorPane>
